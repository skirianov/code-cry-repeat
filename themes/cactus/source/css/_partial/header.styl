#header
  margin: 0 auto 2rem
  width: 100%
  background-color: #000000
  height: 4rem

  h1, .h1
    margin-top: 5px
    margin-bottom: 0
    color: $color-header
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.5rem
    line-height: 2rem

    antialias()

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin: 7px
    margin-right: 30px
    width: $logo-width
    height: $logo-height
    background-size: $logo-width $logo-height
    background-repeat: no-repeat
    if $logo-grayout
      filter: grayscale(100%)
      -webkit-filter: grayscale(100%)

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-style: normal
    font-size: .8rem

    ul
      margin-top: 10px
      padding: 0
      list-style-type: none
      line-height: 15px

      a
        margin-right: 15px
        color: $color-text
        padding: 10px
        background-color: $color-accent-1
        box-shadow: 3px 3px 0 0 

      a:hover
        background-color: #000000
        border-color: $color-accent-1
        color: $color-accent-1

      li
        display: inline-block
        margin-right: 15px
        border-right: 1px dotted
        border-color: $color-accent-1
        vertical-align: middle

      .icon
        display: none

      li:last-child
        margin-right: 0
        border-right: 0

        a
          margin-right: 0

if $logo-grayout
  #header:hover
    #logo
      filter: none
      -webkit-filter: none

@media screen and (max-width: 480px)
  .py4 
    padding-top: 1rem

  #header #logo
    margin-right: 10px

  #header #title
    display: table
    margin-right: 3rem
    min-height: $logo-height
    h1
      margin-top: 1rem
      font-size: 1.2rem
      display: block

  #header #nav
    ul
      display: flex
      a
        margin-right: 0
      a:hover
        background: none
      a:active
        background: #000
        color: $color-accent-1

      li
        display: none
        border-right: 0

      li:first-child a 
        background: #000
        color: $color-accent-1        

      li.icon
        position: absolute
        top: 1.8rem
        right: 0.1rem
        display: inline-block
        
      #home
        display: none
    ul.responsive
      li
        display: block

    li:not(:first-child)
      padding-top: 1.2rem
      font-size: 1.2rem
      